{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Comic Strip Maker",
      "type": "shell",
      "command": "C:/msys64/ucrt64/bin/g++.exe",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "args": [
        "-std=c++17",
        "-Wall",
        "-Wextra",
        "-Wpedantic",

        "main.cpp",
        "Character.cpp",
        "AssetManager.cpp",
        "SpeechBubble.cpp",
        "Command.cpp",
        "CanvasObject.cpp",
        "BrushStroke.cpp",

        "-I",
        "C:/Users/SRI VINEEL/Downloads/Source/SFML-3.0.2/include",

        "-L",
        "C:/Users/SRI VINEEL/Downloads/Source/SFML-3.0.2/lib",

        "-lsfml-graphics",
        "-lsfml-window",
        "-lsfml-system",

        "-o",
        "ComicStripMaker.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}
